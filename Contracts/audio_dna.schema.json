{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bxlstnrd.local/schemas/audio_dna.schema.json",
  "title": "AudioDNA",
  "type": "object",
  "required": ["meta", "structure", "dynamics", "lyrics", "story_arc"],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["bpm", "style"],
      "additionalProperties": false,
      "properties": {
        "bpm": { "type": "number", "minimum": 1 },
        "style": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        },
        "language": { "type": "string" },
        "duration_sec": { "type": "number", "minimum": 0 }
      }
    },
    "structure": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "start", "end"],
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string",
            "enum": ["intro", "verse", "prechorus", "chorus", "bridge", "breakdown", "outro", "instrumental"]
          },
          "label": { "type": "string" },
          "start": { "type": "number", "minimum": 0 },
          "end": { "type": "number", "minimum": 0 },
          "notes": { "type": "string" }
        }
      }
    },
    "dynamics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["start", "end", "energy"],
        "additionalProperties": false,
        "properties": {
          "start": { "type": "number", "minimum": 0 },
          "end": { "type": "number", "minimum": 0 },
          "energy": { "type": "number", "minimum": 0, "maximum": 1 },
          "notes": { "type": "string" }
        }
      }
    },
    "lyrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["start", "end", "text"],
        "additionalProperties": false,
        "properties": {
          "start": { "type": "number", "minimum": 0 },
          "end": { "type": "number", "minimum": 0 },
          "text": { "type": "string" },
          "lang": { "type": "string" }
        }
      }
    },
    "vocal_delivery": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pace": { "type": "string", "enum": ["slow", "mid", "fast", "very_fast"] },
        "tone": { "type": "array", "items": { "type": "string" } },
        "processing": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "string" }
      }
    },
    "story_arc": {
      "type": "object",
      "required": ["theme", "start", "conflict", "end"],
      "additionalProperties": false,
      "properties": {
        "theme": { "type": "string" },
        "start": { "type": "string" },
        "conflict": { "type": "string" },
        "end": { "type": "string" }
      }
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "provider": { "type": "string" },
        "model": { "type": "string" },
        "created_at": { "type": "string" }
      }
    }
  }
}
