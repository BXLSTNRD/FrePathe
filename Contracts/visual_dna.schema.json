{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bxlstnrd.local/schemas/visual_dna.schema.json",
  "title": "VisualDNA",
  "type": "object",
  "required": ["cast_id", "text_tokens", "reference_images"],
  "additionalProperties": false,
  "properties": {
    "cast_id": { "type": "string", "minLength": 1 },
    "name": { "type": "string" },
    "role": { "type": "string", "enum": ["lead", "supporting", "extra"] },

    "text_tokens": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },

    "reference_images": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["url", "role"],
        "additionalProperties": false,
        "properties": {
          "url": { "type": "string", "minLength": 3 },
          "role": {
            "type": "string",
            "enum": ["primary_face", "full_body", "outfit", "pose", "expression", "backup"]
          },
          "notes": { "type": "string" }
        }
      }
    },

    "conditioning": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ip_adapter": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "strength": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.75 }
          }
        },
        "lora": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "lora_id": { "type": ["string", "null"] },
            "strength": { "type": ["number", "null"], "minimum": 0, "maximum": 2 }
          }
        }
      }
    }
  }
}
