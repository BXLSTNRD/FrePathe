{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bxlstnrd.local/schemas/patch_ops.schema.json",
  "title": "PatchOps",
  "type": "object",
  "required": ["op", "project_id"],
  "additionalProperties": false,
  "properties": {
    "project_id": { "type": "string" },
    "op": {
      "type": "string",
      "enum": ["RERENDER", "REINVENT_SCENE", "INSERT_SCENES_RIGHT", "INSERT_SCENES_LEFT", "DELETE_SCENE", "UPDATE_SCENE_NOTES"]
    },
    "scene_id": { "type": "string" },
    "count": { "type": "integer", "minimum": 1, "maximum": 10 },
    "notes": { "type": "string" },
    "new_seed": { "type": "integer" }
  }
}
